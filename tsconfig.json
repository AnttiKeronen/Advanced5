{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "rootDir": "./",
    "outDir": "./dist",

    "lib": ["esnext"],
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
